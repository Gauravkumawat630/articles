
<h1 style="color: red"><%= @article.title  %></h1>
<p style="color: green"><%= @article.body  %></p>


<div class="mb-3">
  <%= button_to "Edit", edit_article_path(@article), id: "open-contacts-dialog-btn", class: "btn btn-primary inbox-sf-add-btn tip", method: :get %>
 <br> <%= button_to "Delete", article_path(@article), method: :delete, class: "btn btn-danger ms-2" %>
</div>

<h2>Comments</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @article.comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="mb-3">
    <%= form.label :commenter, class: "form-label" %>
    <%= form.text_field :commenter, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <div>
   <br> <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
 <br> <%= button_to "Back", articles_path, id: "open-contacts-dialog-btn", class: " table-dark", method: :get %>
</div>