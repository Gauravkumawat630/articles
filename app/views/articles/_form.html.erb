<%= form_with(model: article, class: "form-horizontal") do |form| %>
  <div class="form-group">
    <%= form.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :body, class: "form-control" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>